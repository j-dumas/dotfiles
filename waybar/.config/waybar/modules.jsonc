{
  // =========================
  // Left group
  // =========================

  // Expand group for power buttons and launcher
  "group/expandpower": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 600,
      "transition-to-right": true,
      "click-to-reveal": true
    },
    "modules": [
      "custom/os", 
      "custom/launcher",
      "custom/lock",
      "custom/shutdown"
    ]
  },

  // Expand icon for power buttons and launcher
  "custom/os": {
    "format": " Ôå¢ ",
    "tooltip": false
  },

  // App launcher
  "custom/launcher": {
    "format": "Û∞Äª",
    "on-click": "wofi --show drun",
    "tooltip-format": "Launcher"
  },

  // Lock module
 "custom/lock": {
   "format": "Û∞åæ",
   "on-click": "hyprlock",
   "tooltip-format": "Lock"
 },

  // Shutdown module
  "custom/shutdown": {
    "format": "ÔÄë ",
    "on-click": "wlogout -b 2 -c 10px -r 10px",
    "tooltip-format": "Shutdown"
  },

  // Hyrland workspaces module
  "hyprland/workspaces": {
		"format": "{icon}",
		"format-icons": {
			"active": "ÔÑë",
			"default": "ÔÜí",
      "empty": "ÔÑå"
    },
    "persistent-workspaces": {
      "eDP-1": [1, 2, 3]
    }
  },

  // Expand group for system info
  "group/expandsys": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 600,
      "transition-to-right": true,
      "click-to-reveal": true
    },
    "modules": [
      "custom/infosys", 
      "cpu",
      "memory",
      "temperature"
    ]
  },

  // Expand icon for system info
  "custom/infosys": {
    "format": "Û∞ãº ",
    "tooltip": false
  },

  // Hardware modules
  "cpu": {
    "format": "Û∞ª†",
    "tooltip": true
  },

  "memory": {
    "format": "ÓøÖ"
  },

  "temperature": {
    "critical-threshold": 80,
    "format": "Ôãâ"
  },

  // =========================
  // Center group
  // =========================

  // Hyprland windows module
  "hyprland/window": {
    "format": "{title}",
    "rewrite": {
        "(.*)Mozilla Firefox": "Firefox",
        "tmux(.*)": "tmux",
        "nvim(.*)": "nvim",
        "(.*)Obsidian(.*)": "Obsidian",
        "(.*)Zotero": "Zotero"
    }
  },

  // =========================
  // Right group
  // =========================

  // Modules right group
  "group/right": {
    "orientation": "horizontal",
    "modules": [
      "backlight",
      "pulseaudio", 
      "hyprland/language", 
      "network", 
      "bluetooth", 
      "clock",
      "battery"
    ]
  },

  // Brightness module
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["Û∞å∂", "Û∞åµ", "Û∞õ®"]
  },
  
  // Volume module
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "{volume}% Û∞ùü",
    "format-icons": {
      "default": ["ÔÄß", "ÔÄ®"]
    },
    "scroll-step": 1,
    "on-click": "amixer set Master toggle -q",
    "on-click-right": "pavucontrol"
  },

  // Language module
  "hyprland/language": {
    "format-en": "en",
    "format-fr": "fr"
  },

  // Network module
  "network": {
    "format-wifi": "Ôá´",
    "format-ethernet":"Óºâ",
    "format-disconnected": "Ó¨Å",
    "tooltip-format-disconnected": "Error",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´ ",
    "tooltip-format-ethernet": "{ifname} üñß ",
    "on-click": "~/.config/waybar/scripts/wifimenu"
  },

  // Bluetooth module
  "bluetooth": {
    "format-on": "Û∞ÇØ",
    "format-off": "Û∞Ç≤",
    "format-disabled": "Û∞Ç≤",
    "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
    // "format-connected": "{device_alias} Û∞ÇØ",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
    "on-click": "~/.config/waybar/scripts/bluetoothmenu"
  },

  // Clock module
  "clock": {
    "interval": 1,
    "format": "{:%H:%M:%OS %F}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode"          : "month",
      "mode-mon-col"  : 3,
      "on-scroll"     : 1,
      "format": {
        "months":     "<span color='#89dceb'><b>{}</b></span>",
        "days":       "<span color='#f5e0dc'><b>{}</b></span>",
        "weekdays":   "<span color='#fab387'><b>{}</b></span>",
        "today":      "<span color='#f38ba9'><b><u>{}</u></b></span>"
      }
    },
    "actions":  {
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  // Battery module
  "battery": {
    "interval":30,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Û∞ÇÑ",
    "format-plugged": "{capacity}% Û∞ÇÑ",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Åª","Û∞Åº","Û∞Åæ","Û∞ÇÄ","Û∞ÇÇ","Û∞Åπ"]
  }
}
